{
  "root": true,
  "env": {
    "es2024": true,
    "jest": true,
    "node": true,
    "browser": true
  },
  "parserOptions": {
    "ecmaVersion": "latest",
    "sourceType": "module",
    "ecmaFeatures": {
      "jsx": true
    }
  },
  "plugins": ["@typescript-eslint", "import"],
  "extends": [
    "plugin:prettier/recommended",
    "eslint:recommended",
    "plugin:@typescript-eslint/recommended",
    "plugin:import/recommended"
  ],
  "parser": "@typescript-eslint/parser",
  "rules": {
    "no-console": 0,
    "no-extra-semi": "off",
    "no-mixed-spaces-and-tabs": "off",
    "no-unexpected-multiline": "off",
    "yoda": ["error", "never"],
    "prettier/prettier": [
      "error",
      {
        "trailingComma": "es5"
      }
    ],
    "@typescript-eslint/no-namespace": ["error", { "allowDeclarations": true }]
  },
  "settings": {
    "import/resolver": {
      "node": true,
      "typescript": true
    }
  }
}
